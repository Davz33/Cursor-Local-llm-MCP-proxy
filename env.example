# Perplexity API Configuration
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Alternative environment variable names (any of these will work):
# SONAR_API_KEY=your_perplexity_api_key_here
# PERPLEXITY_SONAR_API_KEY=your_perplexity_api_key_here

# Local LLM Configuration
LOCAL_LLM_URL=http://127.0.0.1:1234
LLM_VALIDATION_ENABLED=true
USE_CURSOR_VALIDATION=true
MAX_REFINEMENT_RETRIES=2

# MCP Orchestrator Configuration
ENABLE_MCP_ORCHESTRATOR=true
MCP_ORCHESTRATION_RULES_PATH=$HOME/local-llm-proxy/mcp-orchestration-rules.txt
